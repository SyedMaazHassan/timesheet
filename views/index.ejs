<%layout("./layout/boilerplate")%>
<div class="container">

        <div class="row">
            <!-- Available card sinppet -->
            <%if(allWeeks){ %>
                <%for(let week of allWeeks){%>
                    <%if( (Number(week.createdAt.toLocaleDateString().split('/')[0]))+7 >= (day) ){%>
                    <div class="col-xl-4 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-0">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="h4 mb-0 font-weight-bold text-gray-800">
                                        Week created at - <%=week.createdAt.toLocaleDateString()%></div>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <div class="row">
                                        <div class="col-sm-6 d-flex align-items-center">
                                        <span class="myLabel available">
                                            <b>Current</b>
                                        </span>
                                        </div>
                                        <div class="col-sm-6 d-flex align-items-center justify-content-end">
                                            <a href="/week/<%=week.id%>" class="btn btn-sm btn-secondary mr-1">Edit</a>
                                            <form action="/submitweek" method="post" onsubmit="return confirm('Submit for review ?');">
                                                <div class="d-none">

                                                </div>
                                                <button type="submit" class="btn btn-primary btn-sm py-1">Submit</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
<!--            end if -->
                    <%}else if((Number(week.createdAt.toLocaleDateString().split('/')[0]) ) < (new Date().getDay())){%>


            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-0">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="h4 mb-0 font-weight-bold text-gray-800">
                                    Week X</div>
                                <p class="text-gray-500">Created at<%=week.createdAt.toLocaleDateString('en-GB')%></p>
                            </div>
                        </div>
                        <div class="mt-3">
                            <div class="row">
                                <div class="col-sm-6 d-flex align-items-center">
                                        <span class="myLabel booked">
                                            <b>Past</b>
                                        </span>
                                </div>
                                <div class="col-sm-6 d-flex align-items-center justify-content-end">
                                    <form action="/submitweek" method="post" onsubmit="return confirm('Submit for review ?');">
                                        <div class="d-none">

                                        </div>
                                        <button type="submit" class="btn btn-primary btn-sm py-1">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
                <%}%>
            <%}else{%>
                <h2>No weeks added yet</h2>
            <%}%>




    </div>
</div>